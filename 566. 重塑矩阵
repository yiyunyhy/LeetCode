#1.
class Solution:
    def matrixReshape(self, nums: List[List[int]], r: int, c: int) -> List[List[int]]:
        if len(nums)*len(nums[0]) != r * c:
            return nums
        
        ans = [[None]*c for _ in range(r)]
        i = 0
        j = 0
        for m in nums:
            for n in m:
                ans[i][j] = n
                j += 1
                if j==c:
                    j = 0
                    i += 1
        return ans
        
