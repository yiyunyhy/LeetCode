#1.
class Solution:
    def isPowerOfThree(self, n: int) -> bool:
        return n > 0 and 1162261467 % n ==0 #3^19=1162261467是小于2^31最大的3的倍数
#2.
class Solution:
    def isPowerOfThree(self, n: int) -> bool:
        if n == 0:
            return False
        
        while n > 0:
            if n % 3 == 0:
                n /= 3
            else:
                break
        return n==1
#3.
class Solution:
    def isPowerOfThree(self, n: int) -> bool:
        return False if n <= 0 else n == pow(3, round(math.log(n, 3)))

